extends ./layout/index

block contenido 
    main.container.mt-5
        h1.text-center.mt-5=pagina 
        
        blockquote.text-center Lee sobre nuestros clientes y sus experiences

        include ./layout/bloquetestimoniales
        .row.justify-content-center.col


        
            .cold-md-12
                h2.d-block.w-100.text-center Agrega un Testimonial 

                if(errores)
                    each error in errores
                        .alert.col.alert-danger.text-center= error.mensaje


            .row.justify-content-center.col
                .col-md-8
                    form(action='/testimoniales' method="POST")
                        .form-group 
                            label(form='nombre') Nombre 
                            input#nombre(type='text', placeholder='Tu Nombre',
                            name='nombre' class='form-control' value=nombre)
                        .form-group 
                            label(form='correo') Correo Electronico 
                            input#nombre(type='text', placeholder='Tu Correo',
                            name='correo' class='form-control' value=correo )
                        .form-group 
                            label(form='mensaje') Mensaje 
                            input#nombre(type='text', placeholder='Tu Mensaje',
                            name='mensaje' class='form-control' value=mensaje)

                        input.btn.btn-success.btn-block(type='submit')